<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:visibility="visible"
    tools:context=".LogInStudent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="345dp"
        android:layout_height="478dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="33dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/rounded_view_corner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginEnd="131dp"
            android:layout_marginBottom="53dp"
            android:background="#689F38"
            android:text="GO"
            android:onClick="advance"
            android:textColor="#FFFEFE"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="222dp"
            android:layout_height="44dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="106dp"
            android:ems="10"
            android:text="Password"
            android:onClick="hitPass"
            app:layout_constraintBottom_toTopOf="@+id/button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/studentUser"
            android:layout_width="223dp"
            android:layout_height="43dp"
            android:layout_marginStart="62dp"
            android:layout_marginTop="59dp"
            android:layout_marginEnd="59dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:text="Username"
            android:onClick="hitName"
            app:layout_constraintBottom_toTopOf="@+id/editTextTextPassword3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="156dp"
            android:layout_height="48dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="93dp"
            android:fontFamily="@font/amatic_sc"
            android:gravity="center"
            android:text="Log In"
            android:textColor="#F57C00"
            android:textSize="36sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/studentUser"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/error"
            android:layout_width="182dp"
            android:layout_height="21dp"
            android:layout_marginStart="81dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="81dp"
            android:gravity="center"
            android:text="Invalid Log In Credentials"
            android:textColor="#D13838"
            android:visibility="invisible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>